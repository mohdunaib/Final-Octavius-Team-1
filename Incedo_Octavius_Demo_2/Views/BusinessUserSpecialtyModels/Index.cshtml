@model IEnumerable<Incedo_Octavius_Demo_2.Models.BusinessUserSpecialtyModel>

@{
    ViewBag.Title = "Index";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
    <title>Bussiness Users | Degree</title>
    @Styles.Render("~/Content/css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <style>
        .my_table{
            text-align:center;
        }
        .my_thead{
            background-color: #4d84e2;
            color: white;
        }
    </style>
</head>
<body>
    <div style="margin:25px;">
<h2>Speciality Business Rules</h2>

<p>
            @* @Html.ActionLink("Create New", "Create") *@
            @Html.ActionLink("Create New", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
</p>
        @using (Html.BeginForm("Index", "BusinessUserSpecialtyModels", FormMethod.Get))
        {
            @Html.TextBox("search")
                            <input type="submit" value="Search" />
        }
<br />

<table class="table table-hover my_table">
    <thead class = "my_thead">
    <tr>
        <th>
                        @Html.DisplayNameFor(model => model.SpecialtyMap)
        </th>
        <th>
                        @Html.DisplayNameFor(model => model.SpecialtyMaster)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                            @Html.DisplayFor(modelItem => item.SpecialtyMap)
                </td>
                <td>
                            @Html.DisplayFor(modelItem => item.SpecialtyMaster)
                </td>
                <td>
                    <button class="btn btn-outline-secondary " onclick="location.href='@Url.Action("Edit", new {id=item.MapID})'">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z" />
                        </svg>   Edit
                    </button>


                    <button class="btn btn-outline-secondary " onclick="location.href='@Url.Action("Delete", new {id=item.MapID})'">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                        </svg>  Delete
                    </button>
                </td>
            </tr>
                }
            </tbody>

</table>
</div>

</body>
</html>