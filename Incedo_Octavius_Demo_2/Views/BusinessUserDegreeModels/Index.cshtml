@model IEnumerable<Incedo_Octavius_Demo_2.Models.BusinessUserDegreeModel>

@{
    ViewBag.Title = "Index";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
