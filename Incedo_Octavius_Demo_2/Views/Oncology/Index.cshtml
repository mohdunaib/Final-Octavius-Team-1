@model IPagedList<Incedo_Octavius_Demo_2.Models.KOL_Image>
@{
    ViewBag.Title = "Index";
}
@using PagedList.Mvc;
@using PagedList;


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
        .my_card {
            display: flex;
            border: none !important;
            align-items: center;
            text-align: center;
        }

        .my_img {
            width: 250px;
            height: 250px;
            box-shadow: 0 0 20px;
        }
    </style>
</head>
<body>
    <div class="justify-content-between">
        <h2 class="text-dark text-center alert-heading">
            KOL-ONCOLOGY
        </h2>
        <br />

        @using (Html.BeginForm("Index", "Oncology", FormMethod.Get))
        {
            @Html.TextBox("search")
            <input type="submit" value="Search" />
        }


    </div>

    <div class="row" style="margin-left:70px;">
        @foreach (var item in Model)
        {
            <div class="col-md-3" style="width:250px;margin:30px">
                <div class="card my_card">
                    <img src="@item.Image_URL" class="card-img-top rounded-circle my_img" alt="Dummy Profile Pic">
                    <div class="card-body">

                        <h4 class="card-title">
                            @Html.ActionLink(item.First_Name + " " + item.Last_Name, "Details", "KOL_Details", new { id = item.kolID }, null)
                        </h4>
                    </div>
                </div>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Oncology", new { page }))
</div>
